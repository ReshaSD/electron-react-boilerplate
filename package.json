{
  "name": "app_name",
  "private": true,
  "scripts": {
    "clean": "find ./ -type d -name \"node_modules\" -exec rm -rf {} \\; | rm -rf packages/app-desktop/src/dist | rm -rf packages/app-desktop/src/main.prod.js | exit 0",
    "r2einstall": "yarn clean && yarn install",
    "reinstall": "yarn install",
    "desktop:start": "yarn workspace @app_name/desktop start",
    "desktop:build": "yarn workspace @app_name/desktop build",
    "desktop:package": "yarn workspace @app_name/desktop package",
    "desktop:test": "yarn workspace @app_name/desktop test",
    "web:start": "yarn workspace @app_name/web start",
    "web:build": "yarn workspace @app_name/web build",
    "web:test": "yarn workspace @app_name/web test"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-erb": "^2.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-compat": "^3.8.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.0.8",
    "typescript": "^4.2.4"
  }
}
