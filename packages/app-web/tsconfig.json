{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "baseUrl": "src",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "target": "ES5",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "typeRoots": [
      "../../@types",
      "../../node_modules/@types",
      "./node_modules/@types"
    ],
    "module": "ESNext"
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
